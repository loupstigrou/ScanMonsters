<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="prog_mobile.uqac.com.scanmonsters.OCRActivity" >
    
    <TextView
        android:id = "@+id/tv_result"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textIsSelectable="false"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/image"
        android:layout_weight="1"
        android:layout_width="1280dp"
        android:layout_height="720dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/image">

        <Button
            android:id="@+id/bt_byPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ac_tesseract_btn_gallery"
            android:singleLine="true"
            android:background="@color/accent"
            android:textColor="@color/icons"
            android:layout_marginRight="10dp"
            android:onClick="byPass"/>

        <Button
            android:id="@+id/bt_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/bt_byPass"
            android:text="@string/ac_tesseract_btn_camera"
            android:background="@color/accent"
            android:textColor="@color/icons"
            android:onClick="takePhoto"/>
    </RelativeLayout>

</RelativeLayout>
