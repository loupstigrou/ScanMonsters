<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="prog_mobile.uqac.com.scanmonsters.OCRActivity" >
    
    <Button
        android:id="@+id/bt_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ac_tesseract_btn_gallery"
        android:singleLine="true"></Button>

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_gallery"
        android:text="@string/ac_tesseract_btn_camera"
        />
    
    <TextView
        android:id = "@+id/tv_result"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@id/bt_gallery"
        android:textIsSelectable="true" 
        android:scrollbars="vertical"/>
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="640dp"
        android:layout_height="480dp"
        android:layout_below="@id/tv_result"
         />
    
</RelativeLayout>
