<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="prog_mobile.uqac.com.scanmonsters.OCRActivity" >

    <Button
        android:id="@+id/bt_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ac_tesseract_btn_gallery"
        android:singleLine="true"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bt_gallery"
        android:text="@string/ac_tesseract_btn_camera"
        android:background="@color/blue"
        android:textColor="@color/white"
        />
    
    <TextView
        android:id = "@+id/tv_result"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@id/bt_gallery"
        android:textIsSelectable="true" 
        android:scrollbars="vertical"/>
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="1280dp"
        android:layout_height="720dp"
        android:layout_below="@id/tv_result"
         />

    <!--<org.opencv.android.JavaCameraView
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:visibility="gone"
        android:id="@+id/CameraView"
        android:layout_below="@id/bt_camera"
        opencv:show_fps="true"
        opencv:camera_id="back"/>!-->

</RelativeLayout>
